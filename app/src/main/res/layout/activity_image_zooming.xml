                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.4" />

            <!--<ImageView
                  android:id="@+id/btnRght"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/app_arrow_right" />-->

        </LinearLayout>

    </FrameLayout>
</LinearLayout>

