<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:id="@+id/rlvHomeMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:padding="6dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlvBottomTextView"
        android:layout_margin="1dp"
        app:cardElevation="5dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            >

            <ImageView
                android:id="@+id/mImgHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />


            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/img_home_trns"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"

                >
            <ImageView
                android:id="@+id/iv_price_icon"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_home_dlr"

                android:layout_marginTop="0dp"/>

            <com.justtannoor.justtannoor.custom.TextViewHead
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="AED 525"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_toEndOf="@+id/iv_price_icon"
                android:enabled="false"
                android:focusable="false"/>

            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:id="@+id/rlvBottomTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent">

        <com.justtannoor.justtannoor.custom.TextViewHead

            android:id="@+id/txtHomeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:text="Arabic Sweet Bread"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"

            android:visibility="visible" />
        
        <ImageView
            android:id="@+id/iv_cntr_icon"
            android:layout_below="@+id/txtHomeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_home_cnticon"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"/>

        <com.justtannoor.justtannoor.custom.TextViewHead
            android:id="@+id/txtHomeCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHomeName"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/iv_cntr_icon"
            android:layout_marginTop="5dp"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:text="Arabic"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"
            android:visibility="visible"
            android:enabled="false"
            android:focusable="false"
            android:background="@android:color/transparent"/>

        <com.justtannoor.justtannoor.custom.TextViewHead
            android:id="@+id/txtHomeMinOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txtHomeName"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="5dp"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:text="Min Ord: AED 4521"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"
            android:visibility="visible" />

    </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ViewDividerColor"/>

</RelativeLayout>